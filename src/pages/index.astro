---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const latestPosts = allPosts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
).slice(0, 5);
---

<Layout title="Oskar Kowalów - Frontend Developer">
  <section class="hero">
    <h1 class="hero-title">Cześć.</h1>
    <div class="hero-content">
      <p>Jestem Oskar - pracuję jako front-end developer, 
      ponadto uczę programowania i prowadzę tego bloga 
      na którym znajdziesz tematy związane z programowaniem.</p>
    </div>
  </section>
  
  <section class="latest-posts">
    <div class="section-header">
      <h2>Ostatnie wpisy</h2>
      <a href="/blog" class="view-all">Czytaj wszystkie wpisy →</a>
    </div>
    <div class="posts-grid">
      {latestPosts.map((post) => (
        <article class="post-card">
          <a href={`/blog/${post.slug}/`}>
            <h3>{post.data.title}</h3>
            <time>{post.data.pubDate.toLocaleDateString('pl-PL', {
              year: 'numeric',
              month: 'long', 
              day: 'numeric'
            })}</time>
            <p>{post.data.description}</p>
            {post.data.tags && (
              <div class="tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  .hero {
    margin: 0 0 var(--spacing-20) 0;
  }
  
  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--color-heading);
    margin: 0 0 var(--spacing-6) 0;
    letter-spacing: -0.025em;
  }
  
  .hero-content p {
    font-size: var(--font-size-lg);
    color: var(--color-text);
    margin: 0;
    max-width: 55ch;
  }
  
  .latest-posts {
    margin: var(--spacing-16) 0;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--spacing-8);
  }
  
  .section-header h2 {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-heading);
    margin: 0;
  }
  
  .view-all {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    font-size: var(--font-size-base);
    transition: color 0.2s ease;
  }
  
  .view-all:hover {
    color: var(--color-primary-hover);
  }
  
  .posts-grid {
    display: grid;
    gap: var(--spacing-6);
  }
  
  .post-card {
    padding: var(--spacing-6);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    transition: all 0.2s ease;
    background: var(--color-background);
  }
  
  .post-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }
  
  .post-card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .post-card h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-heading);
    margin: 0 0 var(--spacing-2) 0;
    line-height: 1.3;
  }
  
  .post-card time {
    color: var(--color-muted);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }
  
  .post-card p {
    color: var(--color-text);
    margin: var(--spacing-4) 0;
    line-height: 1.6;
  }
  
  .tags {
    display: flex;
    gap: var(--spacing-3);
    flex-wrap: wrap;
    margin-top: var(--spacing-4);
  }
  
  .tag {
    background: var(--color-surface);
    color: var(--color-muted);
    padding: 0.375rem var(--spacing-3);
    border-radius: 6px;
    font-size: var(--font-size-xs);
    font-weight: 500;
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }
  
  @media (max-width: 640px) {
    .hero-title {
      font-size: var(--font-size-3xl);
    }
    
    .hero-content p {
      font-size: var(--font-size-base);
    }
    
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-2);
    }
    
    .post-card {
      padding: var(--spacing-4);
    }
  }
</style>