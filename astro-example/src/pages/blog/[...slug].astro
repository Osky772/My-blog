---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <article>
    <header class="post-header">
      <h1 class="post-title">{entry.data.title}</h1>
      <div class="post-meta">
        <time class="post-date">{entry.data.pubDate.toLocaleDateString('pl-PL', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}</time>
        {entry.data.tags && (
          <div class="post-tags">
            {entry.data.tags.map((tag) => (
              <span class="post-tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>
    
    <div class="post-content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: none;
  }
  
  .post-header {
    margin-bottom: var(--spacing-12);
    padding-bottom: var(--spacing-8);
    border-bottom: 1px solid var(--color-border);
  }
  
  .post-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-heading);
    margin: 0 0 var(--spacing-6) 0;
    line-height: 1.2;
    letter-spacing: -0.025em;
  }
  
  .post-meta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }
  
  .post-date {
    color: var(--color-muted);
    font-size: var(--font-size-base);
    font-weight: 500;
  }
  
  .post-tags {
    display: flex;
    gap: var(--spacing-3);
    flex-wrap: wrap;
  }
  
  .post-tag {
    background: var(--color-surface);
    color: var(--color-muted);
    padding: 0.375rem var(--spacing-3);
    border-radius: 6px;
    font-size: var(--font-size-sm);
    font-weight: 500;
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }
  
  .post-content {
    line-height: 1.75;
    color: var(--color-text);
    font-size: var(--font-size-lg);
  }
  
  .post-content :global(h2) {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-heading);
    margin: var(--spacing-12) 0 var(--spacing-4) 0;
    line-height: 1.3;
  }
  
  .post-content :global(h3) {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-heading);
    margin: var(--spacing-8) 0 var(--spacing-3) 0;
    line-height: 1.4;
  }
  
  .post-content :global(h4) {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-heading);
    margin: var(--spacing-8) 0 var(--spacing-4) 0;
  }
  
  .post-content :global(p) {
    margin: var(--spacing-4) 0;
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--spacing-4) 0;
    padding-left: var(--spacing-6);
  }
  
  .post-content :global(li) {
    margin: var(--spacing-2) 0;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-6);
    margin: var(--spacing-8) 0;
    font-style: italic;
    color: var(--color-muted);
    background: var(--color-surface);
    padding: var(--spacing-6);
    border-radius: 8px;
  }
  
  .post-content :global(pre) {
    background: #1e293b;
    color: #e2e8f0;
    padding: var(--spacing-6);
    border-radius: 12px;
    overflow-x: auto;
    margin: var(--spacing-8) 0;
    font-size: var(--font-size-sm);
    line-height: 1.7;
    border: 1px solid #334155;
  }
  
  .post-content :global(code) {
    background: var(--color-surface);
    color: var(--color-primary);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.9em;
    font-weight: 500;
    border: 1px solid var(--color-border);
  }
  
  .post-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
    border: none;
    border-radius: 0;
  }
  
  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--spacing-8) 0;
    font-size: var(--font-size-base);
  }
  
  .post-content :global(th),
  .post-content :global(td) {
    border: 1px solid var(--color-border);
    padding: var(--spacing-3) var(--spacing-4);
    text-align: left;
  }
  
  .post-content :global(th) {
    background: var(--color-surface);
    font-weight: 600;
    color: var(--color-heading);
  }
  
  .post-content :global(tr:nth-child(even)) {
    background: var(--color-surface);
  }
  
  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  
  .post-content :global(a:hover) {
    color: var(--color-primary-hover);
    text-decoration: underline;
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: var(--spacing-8) 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: var(--color-border);
    margin: var(--spacing-12) 0;
  }
  
  @media (max-width: 640px) {
    .post-title {
      font-size: var(--font-size-2xl);
    }
    
    .post-content {
      font-size: var(--font-size-base);
    }
    
    .post-content :global(h2) {
      font-size: var(--font-size-xl);
      margin: var(--spacing-12) 0 var(--spacing-4) 0;
    }
    
    .post-content :global(h3) {
      font-size: var(--font-size-lg);
      margin: var(--spacing-8) 0 var(--spacing-3) 0;
    }
    
    .post-content :global(pre) {
      padding: var(--spacing-4);
      font-size: var(--font-size-xs);
    }
  }
</style>